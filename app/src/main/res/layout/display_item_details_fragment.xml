<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:textSize="24dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:text="@string/item_name_s"
                android:layout_height="wrap_content" >
            </TextView>

            <TextView
                android:id="@+id/item_title_txt"
                android:layout_width="wrap_content"
                android:textSize="24dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/red"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" >
            </TextView>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_cat"
            android:layout_width="wrap_content"
            android:textSize="24dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:text="@string/category"
            android:layout_height="wrap_content" >
        </TextView>

        <TextView
            android:id="@+id/item_category_txt"
            android:layout_width="wrap_content"
            android:textSize="24dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/red"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" >
        </TextView>

    </LinearLayout>

        <ImageView
            android:id="@+id/item_img1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_des"
            android:layout_width="wrap_content"
            android:textSize="24dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:text="@string/description1"
            android:layout_height="wrap_content" >
        </TextView>

        <TextView
            android:id="@+id/item_desc_txt"
            android:layout_width="wrap_content"
            android:textSize="24dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/red"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" >
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:textSize="24dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:text="@string/price"
            android:layout_height="wrap_content" >
        </TextView>

        <TextView
            android:id="@+id/item_price_txt"
            android:layout_width="wrap_content"
            android:textSize="24dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/red"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" >
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_location"
            android:layout_width="wrap_content"
            android:textSize="24dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:text="@string/location1"
            android:layout_height="wrap_content" >
        </TextView>

        <TextView
            android:id="@+id/item_location_txt"
            android:layout_width="wrap_content"
            android:textSize="24dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/red"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" >
        </TextView>

    </LinearLayout>

    </LinearLayout>

</RelativeLayout>