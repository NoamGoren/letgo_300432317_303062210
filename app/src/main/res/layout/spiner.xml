<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="0.07"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/cars"
            android:layout_width="75dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/cars1"/>


        <ImageButton
            android:id="@+id/home"
            android:layout_width="75dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/home"
            android:onClick="changeFrag"
            android:tag="2"
            />

        <ImageButton
            android:id="@+id/motors"
            android:layout_width="75dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/motors"
            android:onClick="changeFrag"
            android:tag="3"/>

        <ImageButton
            android:id="@+id/fashion"
            android:layout_width="75dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/fashion"
            android:onClick="changeFrag"
            android:tag="4"/>

        <ImageButton
            android:id="@+id/other"
            android:layout_width="75dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/other"
            android:onClick="changeFrag"
            android:tag="5"/>

        <ImageButton
            android:id="@+id/child"
            android:layout_width="75dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/child"
            android:onClick="changeFrag"
            android:tag="6"/>

        <ImageButton
            android:id="@+id/entertai"
            android:layout_width="75dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/entertai"
            android:onClick="changeFrag"
            android:tag="7"/>

        <ImageButton
            android:id="@+id/leisure"
            android:layout_width="75dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/leisure1"
            android:onClick="changeFrag"
            android:tag="8"/>


    </LinearLayout>




</LinearLayout>